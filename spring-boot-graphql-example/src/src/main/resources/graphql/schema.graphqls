type Query {
    bookById(id: ID): Book
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}

type Mutation {
  addBook(book: BookInput!): Book
}

input BookInput {
  id: Int
  name: String
  pageCount: Int
  authorId: Int
}
